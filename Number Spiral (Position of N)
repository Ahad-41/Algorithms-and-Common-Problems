    ll n; cin >> n;
    ll x, y;

    ll root = ceil(sqrt(n));
    ll difference  = root * root - n;

    if (root > difference){
        x = difference + 1;
        y = root;
    }

    else{
        x = root;
        y = n - (root-1) * (root-1);
    }

    if(!(root & 1)) swap(x, y);
    
    cout << x << " " << y << endl;
